{
  "name": "@pos/backend",
  "private": true,
  "version": "0.1.0",
  "description": "POS backend service (Express + TypeScript + Prisma)",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon",
    "start": "node dist/index.js",
    "prestart": "npm run build",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "test": "DOTENV_CONFIG_PATH=../.env jest --passWithNoTests",
    "test:watch": "DOTENV_CONFIG_PATH=../.env jest --watch",
    "prisma:generate": "dotenv -e ../.env -- prisma generate",
    "prisma:migrate": "dotenv -e ../.env -- prisma migrate dev",
    "prisma:deploy": "dotenv -e ../.env -- prisma migrate deploy",
    "db:push": "dotenv -e ../.env -- prisma db push",
    "db:studio": "dotenv -e ../.env -- prisma studio",
    "postinstall": "prisma generate"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@prisma/client": "^5.16.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "redoc-express": "^2.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.30",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "dotenv-cli": "^7.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prisma": "^5.16.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
